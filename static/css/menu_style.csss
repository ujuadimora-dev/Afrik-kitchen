        animation-name: fade-in;
        animation-duration: 1s;
        animation-delay: 0.5s;
        animation-fill-mode: forwards;
    }

    .menu-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .menu-card img {
        width: 200%;
        max-height: 100px;
        object-fit: cover;
        border-radius: 4px;
        margin-bottom: 20px;
    }

    .menu-card h3 {
        font-size: 24px;
        margin-bottom: 10px;
    }

    .menu-card p {
        font-size: 16px;
    }

    /* Small screen styles */
    @media screen and (max-width: 767px) {
