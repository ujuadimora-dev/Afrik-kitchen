            margin-bottom: 20px;
        }
    }

    /* Large screen styles */
    @media screen and (min-width: 768px) {
        .row.justify-content-center {
            flex-wrap: wrap;
            margin-left: -10px;
            margin-right: -10px;
        }

        .col-md-4 {
            width: calc(33.33% - 20px);
            margin: 10px;
        }
    }

